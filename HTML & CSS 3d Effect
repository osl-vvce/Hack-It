}
.box
{	
	position: relative;
	background-color: white;
	width: 300px;
	height: 400px;
	display: flex;
	justify-content: center;
	align-items: center;
	/*box-shadow:0 1px 0 #efefef,
						0 2px 0 red,
						0 3px 0 red,
						0 4px 0  green,
						0 10px 5px rgba(0,0,0,.1); ;*/
}
.box::before
{
	content: '';
	position: absolute;
	top:-4px;
	left: -4px;
	right: -4px;
	bottom: -4px;
	transform: skew(2deg) skew(4deg);
	background: linear-gradient(315deg,#00ccff,#0e1538,#d400d4);

}
.box::after
{
	content: '';
	position: absolute;
	top:-4px;
	left: -4px;
	right: -4px;
	bottom: -4px;
